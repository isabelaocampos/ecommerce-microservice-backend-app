pipeline {
    agent any
    
    tools {
        maven 'Maven-3.8.1'
    }
    
    environment {
        JAVA_HOME = '/opt/jdk-11.0.2'
        MAVEN_OPTS = '-Dmaven.test.failure.ignore=true'
        MINIKUBE_IP = sh(script: 'kubectl config view -o jsonpath=\'{.clusters[0].cluster.server}\' | sed \'s|https://||;s|:.*||\'', returnStdout: true).trim()
    }
    
    stages {
        stage('üîß Configurar Kubernetes') {
            steps {
                echo '‚öôÔ∏è Configurando acceso a Kubernetes con Service Account Token...'
                sh '''
                    # Limpiar configuraci√≥n anterior
                    echo "üóëÔ∏è Limpiando configuraci√≥n anterior..."
                    rm -rf ~/.kube/config 2>/dev/null || true
                    mkdir -p ~/.kube
                    
                    # Obtener informaci√≥n del cluster
                    MINIKUBE_IP=$(minikube ip 2>/dev/null || echo "192.168.49.2")
                    K8S_SERVER="https://${MINIKUBE_IP}:8443"
                    
                    echo "üìç Kubernetes API Server: ${K8S_SERVER}"
                    
                    # Crear kubeconfig usando token de service account
                    cat > ~/.kube/config << EOF
apiVersion: v1
kind: Config
clusters:
- cluster:
    insecure-skip-tls-verify: true
    server: ${K8S_SERVER}
  name: minikube
contexts:
- context:
    cluster: minikube
    user: jenkins-sa
    namespace: ecommerce
  name: minikube
current-context: minikube
users:
- name: jenkins-sa
  user:
    token: ${K8S_TOKEN}
EOF
                    
                    chmod 600 ~/.kube/config
                    
                    echo "‚úÖ Kubeconfig creado con token"
                    
                    # Verificar conexi√≥n
                    echo "üîå Verificando conexi√≥n al cluster..."
                    kubectl version --client
                    kubectl cluster-info || echo "‚ö†Ô∏è Esperando conexi√≥n..."
                    kubectl get nodes || echo "‚ö†Ô∏è Verificando nodos..."
                '''
            }
        }
        
        stage('üîç Checkout') {
            steps {
                echo 'üì• Clonando repositorio...'
                checkout scm
            }
        }
        
        stage('üèóÔ∏è Build & Test - Fase 1') {
            parallel {
                stage('user-service') {
                    stages {
                        stage('Build user-service') {
                            steps {
                                echo 'üî® Construyendo user-service...'
                                dir('user-service') {
                                    sh 'mvn clean package -DskipTests'
                                }
                            }
                        }
                        stage('Test user-service') {
                            steps {
                                echo 'üß™ Ejecutando tests de user-service...'
                                dir('user-service') {
                                    sh 'mvn test || true'
                                }
                            }
                        }
                        stage('Docker Build user-service') {
                            steps {
                                echo 'üê≥ Construyendo imagen Docker de user-service en Minikube...'
                                dir('user-service') {
                                    sh '''
                                        # Construir directamente en Minikube usando minikube image build
                                        minikube image build -t user-service:latest .
                                        minikube image build -t user-service:${BUILD_NUMBER} .
                                        
                                        # Verificar que la imagen existe
                                        minikube image ls | grep user-service || echo "Imagen creada"
                                    '''
                                }
                            }
                        }
                    }
                }
                
                stage('product-service') {
                    stages {
                        stage('Build product-service') {
                            steps {
                                echo 'üî® Construyendo product-service...'
